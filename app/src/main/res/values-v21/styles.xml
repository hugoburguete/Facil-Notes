<resources>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/et_background</item>
        <item name="android:layout_marginBottom">@dimen/section_margin</item>
        <item name="android:padding">@dimen/et_padding</item>

        <!-- Version specific styles -->
        <item name="android:elevation">5dp</item>
    </style>

    <style name="AppTheme.NoteListItem">
        <item name="android:background">@drawable/et_background</item>
        <item name="android:layout_marginBottom">@dimen/section_margin</item>
        <item name="android:padding">@dimen/et_padding</item>

        <!-- Version specific styles -->
        <item name="android:elevation">5dp</item>
    </style>
</resources>
